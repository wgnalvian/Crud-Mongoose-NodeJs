html 
head 
    title 
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"  integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6", crossorigin="anonymous")
body 

    navbar(class="navbar navbar-light bg-warning")
        div(class="container-fluid")
            a(class="navbar-brand" href="") Crud Mongoose
    div(class="container")
        div(class="row mt-4")
            div(class="col-md-12")
                table(class="table table-responsive")
                    thead 
                        tr
                            th(scope="col") no
                            th(scope="col") Name
                            th(scope="col") nim
                            th(scope="col") Major
                            th(scope="col") Action
                    tbody 
                    - let i = 1
                    each item in result
                        tr
                            th(scope="row")= i++
                            td= item.name
                            td= item.nim 
                            td= item.major
                            td 
                                a(class="btn btn-warning" href=`/update/data/${item._id}`) edit          
                                a(class="btn btn-danger" href=`/api/data/delete/${item._id}`) delete

        div(class="row mt-3")
            div(class="col-md-7")
                form(action="/api/data" method="POST")
                    div(class="mb-3")
                        label(class="form-label", for="name") name
                        input(type="text", name="name" class="form-control")

                    div(class="mb-3")
                        label(class="form-label", for="name") nim
                        input(type="text", name="nim" class="form-control")

                    div(class="mb-3")
                        label(class="form-label", for="name") major
                        input(type="text", name="major" class="form-control")
                    
                    div(class="mb-3")
                        button(type="submit" class="btn btn-warning") Save 

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js", integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf", crossorigin="anonymous") 
